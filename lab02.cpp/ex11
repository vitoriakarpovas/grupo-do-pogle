// Crie uma função capaz de somar os elementos das linhas L1 e L2 de uma matriz. O resultado deve ser colocado na linha L2. Faça o mesmo com a multiplicação.

#include <iostream>
#include <stdio.h>
using namespace std;

int main() {
  int COL, LIN;
  cout << "Por favor, inserir o número de colunas: ";
  cin >> COL;
  cout << "Por favor, inserir o número de linhas: ";
  cin >> LIN;
  
  int matriz[LIN][COL];
  int valor;
  for(int i = 0; i < LIN; i++){
    for(int k = 0; k < COL; k++){
      cout << "Por favor, inserir o valor da matriz" << "[" << i+1 << "]" << "[" << k+1 << "]" << endl;
      cin >> valor;
      matriz[i][k] = valor;
    }
  }

  cout << "\nmatriz: " << endl;

  for(int i = 0; i < LIN; i++){
    for(int k = 0; k < COL; k++){
      cout << matriz[i][k];
      cout << "  ";
    }
    cout << endl;
  }

  for(int i = 0; i < LIN; i++){
    for(int k = 0; k < COL; k++){
      if(i == 1){
        matriz[i][k] += matriz[i-1][k];
      }
    }
  }

  cout << "\nmatriz: " << endl;
  cout << "Soma: L2 = L2 + L1" << endl;

  for(int i = 0; i < LIN; i++){
    for(int k = 0; k < COL; k++){
      cout << matriz[i][k];
      cout << "  ";
    }
    cout << endl;
  }

  cout << "\nmatriz: " << endl;
  cout << "Multiplicação: L2 = L2 * L1" << endl;

  for(int i = 0; i < LIN; i++){
    for(int k = 0; k < COL; k++){
      if(i == 1){
        matriz[i][k] *= matriz[i-1][k];
      }
    }
  }

  for(int i = 0; i < LIN; i++){
    for(int k = 0; k < COL; k++){
      cout << matriz[i][k];
      cout << "  ";
    }
    cout << endl;
  }
}
